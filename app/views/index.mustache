{{<layout}}

{{$applicationContent}}

<h1><img src="{{{ assetPath }}}images/leaderboard.png"></h1>

<h3 data-test="server-details" id="server-details">{{serverDetails}}</h3>

<div id="loading" style="display: none">
  <img src="{{{ assetPath }}}images/creeper.png" align="middle">

  <p>LOOKING FOR PLAYERS ....</p>
</div>
<div id="stats">
  <table>
    {{#players}}
      <tr>
        <td><img data-test="avatar" src="https://minotar.net/avatar/{{name}}/100.png"></td>
        <td data-test="player">{{name}}</td>
        <td><span data-test="achievement" class="achievement {{achievements}}"></span></td>
        <td data-test="score">{{score}}</td>
      </tr>
    {{/players}}
  </table>
</div>

{{/applicationContent}}

{{/layout}}
